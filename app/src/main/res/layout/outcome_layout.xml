<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_userAns_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userAns"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/img_stateIcon_ID"
        app:layout_constraintTop_toTopOf="@+id/img_stateIcon_ID" />

    <TextView
        android:id="@+id/text_sysEngAns_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text_sysEngAns"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_userAns_ID" />

    <TextView
        android:id="@+id/txt_Ans_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:text="sysAns"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_stateIcon_ID" />

    <ImageView
        android:id="@+id/img_stateIcon_ID"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/correct" />

</androidx.constraintlayout.widget.ConstraintLayout>